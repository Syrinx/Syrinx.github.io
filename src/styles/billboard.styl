body.xamarin #billboard
  background-image: url('assets/img/billboards/contact.jpg')
  h1
    font-size: 5em
  h1:before
    content: "Everything you need to deliver great mobile apps"

@media (max-width: 1023px)
  #billboard
    height: 300px
    margin-bottom: -3em
    h1
      font-size: 5em
  body.home #billboard
    height: 360px

@media (max-width: 540px)
  #billboard
    h1
      font-size: 3em

p.billboard-buttons
  margin-top: -15em
