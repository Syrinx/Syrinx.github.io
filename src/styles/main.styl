main
  background-color: white
  padding: 5em 0

article
  margin: auto
  max-width: 1024px
  padding: 0 1em

  h1, h2
    font-family: oswald
    line-height: 1em

  h6
    font-size: 1em
    font-family: 'Oswald', sans-serif
    margin: 0

  a
    color: OrangeRed
    &:hover
      color: white
      background-color: OrangeRed
      text-decoration: none

  .lead
    text-align: center
    text-transform: capitalize
    margin-bottom: 1.5em

    span
      background-color: DarkSlateBlue
      color: white
      padding: 0 .5em
      box-shadow: 1px 1px 3px #333

  p.lead
    text-align: left
    text-transform: none
    margin-bottom: 1em
    font-size: 1.5em
    line-height: 1.5em

  .buttonLink
    background-color: OrangeRed
    color: white
    text-decoration: none
    float: left
    padding: .5em 1em
    transition: all 0.1s ease

    i
      font-size: 1.2em
      margin-left: .5em

    &:hover
      transform: scale(1.1, 1.1)

  .caseStudy
    width: 100%
    display: block
    text-decoration: none
    background-size: cover
    background-position: center center
    background-repeat: no-repeat
    box-shadow: 1px 1px 3px #333

    h1
      color: silver !important
      text-align: center
      line-height: 300px
      background-color: rgba(0, 0, 0, .67)
      transition: all .5s ease
      &:hover
        color: white !important
        text-shadow: 1px 1px 1px black
        background-color: rgba(0, 0, 0, .5)

  .profilePic
    float: right
    margin-left: 1em
    margin-bottom: 1em
    box-shadow: 1px 1px 3px black
    border-radius: 50%
    border: 1px solid silver
    padding: 3px

  p.meta
    font-style: italic
    font-size: .9em

    i
      color: DarkSlateBlue
      display: inline-block
      width: 1.5em

    span
      background-color: DarkSlateBlue
      color: white
      padding: 0 .33em
      box-shadow: 1px 1px 3px #333

  .apply-btn
    background-color: GreenYellow
    color: black !important
    text-decoration: none
    padding: .5em 1em
    margin-top: .5em
    display: inline-block
    font-family: 'Oswald', sans-serif
    box-shadow: 1px 1px 3px silver
    transition: all 0.1s ease
    box-shadow: 1px 1px 3px #333

    &:hover
      transform: scale(1.1, 1.1)
      background-color: GreenYellow !important

    i
      margin-left: .33em
      font-size: 1.2em

  #contact-form input, #contact-form textarea
    width: 100%
    margin-bottom: 2em

  #contact-form textarea
    height: 6em

  #contact-form label
    font-size: .75em
    font-family: 'Oswald', sans-serif
    color: silver

  iframe
    margin-top: 2em
    margin-bottom: 2em

  p.date
    font-size: .9em
    font-style: italic
    margin-top: -1em

  blockquote
    p
      background-color: DarkSlateBlue
      display: inline-block
      color: white
      font-size: 1.5em
      line-height: 1.33em
      font-style: italic
      transform: rotate(-1deg)
      padding: 0 .5em
      box-shadow: 1px 1px 3px #333
      margin-bottom: 1em
      &:before
        content: "\201C"
      &:after
        content: "\201D"

  hr
    border: none
    border-top: 1px LightSteelBlue dashed
    margin: 3em 1.5em

  .service
    ul
      margin: 0
      padding: 0

  #client-logos
    a:hover
      background-color: white
    img
      width: 20%
      margin-right: 5%

body.blog main article
  img
    float: right
    border: 1px solid silver
    transform: rotate(2deg)
    box-shadow: 1px 1px 3px silver
    padding: 3px
    margin: 1em 0 1em 1em
    max-width: 33%
    transition: all 0.1s ease
    &:hover
      transform: scale(1.1, 1.1)

@media (max-width: 767px)
  main
    padding: 3em 0
